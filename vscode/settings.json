{
    // Font Settings.
    "editor.fontFamily": "'Input Sans', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontLigatures": true,
    "editor.fontSize": 16,
    "terminal.integrated.fontFamily": "Iosevka",
    "terminal.integrated.fontSize": 16,
    // Move the sidebar to the right.
    "workbench.sideBar.location": "right",
    // Use a custom title bar.
    "window.titleBarStyle": "custom",
    // Because spaces are better Than Tabs.
    "editor.detectIndentation": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    // Always open files.
    "workbench.editor.enablePreviewFromQuickOpen": false,
    // Don't show open editors.
    "explorer.openEditors.visible": 0,
    "window.title": "${dirty} ${activeEditorMedium}${separator}${rootName}",
    // Don't use the minimap.
    "editor.minimap.enabled": false,
    // Smooth Scrolling
    "editor.smoothScrolling": true,
    // Cursor Phase + Smooth Scrolling.
    "editor.cursorBlinking": "phase",
    "editor.cursorSmoothCaretAnimation": true,
    // Format on {save,paste}, add newline, and trim trailing whitespace.
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    // Turn off telemetry and smiling face.
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
}
